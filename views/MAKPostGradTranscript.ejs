<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="<%= studentData.appURL %>/documents/templates/MAK/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="<%= studentData.appURL %>/documents/templates/MAK/css/fonts.css"
      rel="stylesheet"
      type="text/css"
    />
    <style>
      html {
        -webkit-print-color-adjust: exact;
      }
      body {
        font-size: 12px;
        padding: 0;
        margin: 0;
        font-family: 'NewBaskervilleITCbyBT', 'Times New Roman', sans-serif !important;
        font-weight: 400;
        line-height: 1;
        color: #000 !important;
      }

      ul {
        padding-left: 6px;
      }

      ul li {
        list-style-type: disc !important;
      }

      .font-bold, strong {
        font-family: 'CSCHLBKB', sans-serif !important;
      }


      .font-light {
        font-family: 'CENSCBK', 'Times New Roman', sans-serif !important;
      }

      @page 
      { 
        size: A4 portrait;
        margin: 0.6cm; 
      }
      .text-capitalize {
        text-transform: capitalize !important;
      }

      .header h1 {
        font-size: 28px !important;
        font-family: 'CSCHLBKB', sans-serif !important;
        margin: 0;
      }

      .header h4 {
        font-size: 14px !important;
        font-weight: bold;
        margin: 0;
      }

      .bg-lighter {
        background-color: rgba(255, 255, 255, 0.61) !important;
      }

      .profile-photo {
        height: 90px;
        position: absolute;
        right: 0;
        top: 1.6rem;
        margin-right: 0rem;
      }
        
      .logo {
       max-width: 120px;
        margin-top: 1.5px;
      }

      .d-inline {
        display: inline !important;
      }

      .dot {
        height: 6px;
        width: 6px;
        background-color: #000;
        border-radius: 50%;
        display: inline-block;
        margin-right: 4px;
        margin-left: 4px;
      }
      .bulleting {
        height: 4px;
        width: 4px;
        background-color: #000;
        border-radius: 50%;
        display: inline-block;
        margin-bottom: 2px;
        margin-right: 4px;
      }
      
      .transcript-content {
        min-height: 90vh !important;
      }

      .back-preview {
        margin-top: 1em;
        border: 3px solid rgb(223, 83, 83);
        height: 98vh;
      }

      .results {
        font-size: 8px !important;
      }

      .result-content {
        border: 3px solid #B0BEC5 !important;
        min-height: 73.5vh;
        font-size: 8px !important;
      }

      .tr-border-title-b {
        border-bottom: 3px solid #B0BEC5 !important;
        background-color: #CFD8DC !important;
      }

      .results table th {
        padding: 3px !important;
        border-top: 1px solid #000 !important;
        border-bottom: 1px solid #000 !important;
      }

      .results table td {
        padding: 1px;
        padding-bottom: 2px;
        line-height: 1;
        font-weight: normal;
        font-size: 8px !important;
      }

      .results .semester {
        color: #0d6efd;
        font-weight: normal;
        font-size: 10px;
      }
      .transcript-title {
        color: #000;
      }

      .note-text div,
      .note div {
        padding: 2px !important;
        color: #2f3542;
      }
      .table-striped > tbody > tr:nth-child(2n + 1) > td,
      .table-striped > tbody > tr:nth-child(2n + 1) > th {
        background-color: rgb(239, 245, 253);
      }
      .cgpa {
        color: #ff6600;
      }
      .signature {
        /* position: absolute; */
        margin-right: 2em;
        margin-bottom: -1em;
        /* margin-top: -2em; */
      }
      
      .extra-table tr > td:nth-child(2n) {
        border-right: none !important;
      }
    </style>
  </head>
  <body>
    <div class="header mb-1">
      <div class="d-flex align-items-center justify-content-center">
        <h1 class="mb-0 fs-1 text-end institution-title">MAKERERE</h1>
        <div>
          <img
        src="<%= studentData.appURL %>/documents/templates/MAK/MUK-LOGO.png"
            class="logo mb-1 mx-2"
            alt="Logo"
          />
        </div>
        <h1 class="mb-0 fs-1 text-start institution-title">UNIVERSITY</h1>
      </div>

      <div class="text-center">
        <img
          class="profile-photo"
          src="<%= studentData.avatar %>"
          alt="Photo"
        />
      </div>

      <div class="text-center mb-1">
        <div class="mb-1">Office of the Academic Registrar, P.O. Box 7062, Kampala, Uganda.</div>
        <div>
          <strong>Tel</strong>: +256-414-538130/533332 
          <span class="dot"></span>
          <strong>Fax</strong>: +256-414-534125
          <span class="dot"></span>
          <strong>E-mail</strong>: ar@acadreg.mak.ac.ug
          <span class="dot"></span>
          <strong>Web</strong>: www.ar.mak.ac.ug
        </div>
      </div>
    </div>

      <% studentData.studyYearKeys.forEach((studyYears, index) => { %>
        <div class="result-content">
          <div class="tr-border-title-b pt-1 text-center transcript-title bg-light">
            <h3 class="font-bold mb-0">Academic Transcript</h3>
            <h6 class="mb-1 mt-0"><%= studentData.degreeCategory %> Programmes</h6>
            <div class="float-end fw-bold mb-5">Page 1 of 1</div>
          </div>
          
          <div class="border-bottom border-2 mb-1">
            <div class="row">
              <div class="col-4">
                <table class="table-borderless table table-sm m-0">
                  <tbody>
                    <tr>
                      <td>
                        <strong class="font-bold">NAME:</strong> <span class="font-bold"> <%= studentData.name %></span>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <strong class="font-bold">REG. No.</strong> <%= studentData.registration_number %>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <strong class="font-bold">FACULTY:</strong> <%= studentData.faculty_code %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-4">
                <table class="table-borderless table table-sm m-0">
                  <tbody>
                    <tr>
                      <td width="50%" class="text-end">
                        <strong class="font-bold">SEX:</strong>
                      </td>
                      <td><%= studentData.gender %></td>
                    </tr>
                    <tr>
                      <td class="text-end">
                        <strong class="font-bold">FIRST REGISTERED:</strong> 
                      </td>
                      <td><%= studentData.first_registration %></td>
                    </tr>
                    <tr>
                      <td class="text-end">
                        <strong class="font-bold">PROGRAMME:</strong>
                      </td>
                      <td><%= studentData.faculty_code %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-4">
                <table class="table-borderless table table-sm m-0">
                  <tbody>
                    <tr>
                      <td>
                        <strong class="font-bold">NATIONALITY:</strong> <%= studentData.nationality %>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <strong class="font-bold">HALL:</strong> <%= studentData.hall_of_attachment %>
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <strong class="font-bold">DATE OF BIRTH:</strong> <%= studentData.date_of_birth %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          
          <div class="p-0 results">
            <% studyYears.forEach((studyYear, studyYearIndex) => { %>
              <div class="row g-1">
                <% studentData.studyYears[studyYear].forEach((semester, semIndex) => { %>
                  <div class="col-6">
                    <div class="border rounded bg-light px-1 py-0 font-bold text-sm">
                      <div class="mb-2">
                          <span class="me-4">Year: <%= semester.programme_study_year.replace('YEAR ', '') %></span>
                          <span class="mx-4">Academic Year: <%=  semester.academic_year %></span>
                          <span class="text-capitalize ms-4"><%= semester.semester %></span>
                        </div>
                        <div>
                          <span>Course Code</span>
                          <span>Course Name</span>
                          <span class="float-end me-1">Grade</span>
                          <span class="float-end me-1">CU</span>
                        </div>
                    </div>
                    <table
                      class="table table-sm table-borderless w-100 m-0"
                    >
                      <tbody>
                        <% semester.results.forEach((result) => { %>
                          <tr>
                            <td width="50"><%= result.course_unit_code %></td>
                            <td>
                              <%= result.course_unit_name %>
                              <% if (result.remark === 'CP') { %> <strong>(CP)</strong> <% } %>
                              <% if (result.remark === 'RT') { %> <strong>(RT)</strong> <% } %> 
                              <% if (result.is_audited_course === true || result.course_unit_category.includes('AUDITED') || result.is_audited_result) { %> <strong>(AC)</strong> <% } %> </td>
                            <td width="20"><%= result.credit_unit %> </td>
                            <td width="30"><%= result.grading_letter %> </td>
                          </tr>         
                        <% }); %>

                        <tr>
                          <td class="text-center" colspan="4">
                            <span class="me-5"><strong>GPA: </strong> <%= semester.current_gpa  %></span>                          
                            <span><strong>CGPA: </strong><%= semester.cgpa  %></span>                          
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                <% }); %> 
              </div>
            <% }); %>

            <div class="my-1">
              <strong>DATE OF COMPLETION:</strong> December <%= studentData.completionYear %>
            </div>
            <div class="mb-1">
              <strong>AWARD:</strong> <%= studentData.programme_title %>
            </div>
            
            <div class="my-1 ">
              <strong>CLASS OF AWARD:</strong> <span><%= studentData.resultClass %></span>
            </div>
          </div>
        </div>

    
        <div class="row g-2">
          <div class="col-7 note-text">
            <ul class="mt-4">
              <li> <span class="bulleting"></span> A Credit Unit (CU) is One Contact Hour per Week per Semester or a series of Fifteen (15) Contact Hours.</li>
              <li><span class="bulleting"></span> The length of a Semester is Seventeen (17) weeks, Two (2) of which are for Examination.</li>
              <li><span class="bulleting"></span> Transcript issued after <strong>April 2002</strong> shall bear Photographs.</li>
            </ul>
           
          </div>
          <div class="col-5 text-center">
            <div class="font-bold mt-3 mb-2">
              __________________________________
            </div>
            <h6 class="font-bold">For: Academic Registrar</h6>
            <div>Not valid without Official Stamp. Any alteration</div>
            <div>whatsoever renders the Transcript invalid.</div>
          </div>

          <div class="col-12">
            <span class="font-bold py-2 px-5 border d-inline-block">The Medium of Instruction is ENGLISH.</span>
          </div>
          <div class="col-3">
            <div>* (CP) - Conceded Pass</div>
            <div><%= studentData.serialNumber %></div>
          </div>
          <div class="col-7 text-center">
            <div class="font-bold text-lg">
              For Key to Grades and Remarks, See Reverse
            </div>
          </div>
        </div>
      </div>
    <% }); %>

    <table class="table back-preview">
      <tbody>
        <tr>
          <td colspan="4" class="4">
            <h2 class="text-center mb-2 font-bold">KEY TO GRADES</h2>
           
            <div>The Grading System ans Classification for Undergraduate Degrees and Diplomas is as follows:</div>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <div class="font-bold">Registration up to 1991</div>
            <div class="font-bold">Classification of Awards</div>
          </td>
          <td colspan="2">
            <div class="font-bold">Registration Between 1992 - 1996</div>
            <div class="font-bold">Classification of Awards</div>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <table class="table table-borderless m-0">
              <tbody>
                <tr>
                  <td><strong class="font-bold">a)</strong></td>
                  <td colspan="2">
                    <strong class="font-bold">First Degrees</strong>
                  </td>
                </tr>
                <tr>
                  <td>A</td>
                  <td>80 - 100%</td>
                  <td>Excellent</td>
                  <td>First Class Honors</td>
                </tr>
                <tr>
                  <td>B+</td>
                  <td>70 - 79%</td>
                  <td>Very Good</td>
                  <td>1st Class Honors</td>
                </tr>
                <tr>
                  <td>B</td>
                  <td>60 - 69%</td>
                  <td>Good</td>
                  <td>2nd Class Honors (Upper Division)</td>
                </tr>
                <tr>
                  <td>C</td>
                  <td>50 - 59%</td>
                  <td>Fair/Satisfactory</td>
                  <td>2nd Class Honors (Lower Division)</td>
                </tr>
                <tr>
                  <td>E</td>
                  <td>44 - 49%</td>
                  <td>(Compensatable Fail)</td>
                  <td>Pass</td>
                </tr>
                <tr>
                  <td>F</td>
                  <td>0 - 44%</td>
                  <td>Fail</td>
                </tr><tr>
                  <td><strong class="font-bold">b)</strong></td>
                  <td colspan="2">
                    <strong class="font-bold">Undergraduate Diplomas/Certificates</strong>
                  </td>
                </tr>
                <tr>
                  <td></td>
                  <td>70 - 100%</td>
                  <td>Class One</td>
                </tr>
                <tr>
                  <td></td>
                  <td>50 - 69%</td>
                  <td>Class Two</td>
                </tr>
                <tr>
                  <td></td>
                  <td>40 - 49%</td>
                  <td>Class Three</td>
                </tr>
              </tbody>
            </table>
          </td>
          <td colspan="2">
            <div class="font-bold">Registration Between 1992 - 1996</div>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
